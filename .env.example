# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=exam_bank_user
DB_PASSWORD=exam_bank_password
DB_NAME=exam_bank_db
DB_SSL_MODE=disable

# Server Configuration
GRPC_PORT=50051
HTTP_PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Application Configuration
APP_ENV=development
LOG_LEVEL=info

# Frontend Configuration (for development)
VITE_GRPC_WEB_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080
VITE_APP_TITLE=Exam Bank System

# Docker Configuration
POSTGRES_DB=exam_bank_db
POSTGRES_USER=exam_bank_user
POSTGRES_PASSWORD=exam_bank_password

# Development Tools
ENABLE_GRPC_REFLECTION=true
ENABLE_CORS=true

