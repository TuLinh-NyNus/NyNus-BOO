# PostgreSQL Configuration - NyNus Exam Bank System
# Custom settings for development

# Password encryption method - use scram-sha-256 for better security
# PostgreSQL 14+ recommends scram-sha-256 over deprecated md5
password_encryption = scram-sha-256

# Connection settings
listen_addresses = '*'
max_connections = 100

# Logging
log_destination = 'stderr'
logging_collector = on
log_directory = 'log'
log_filename = 'postgresql-%Y-%m-%d_%H%M%S.log'
log_statement = 'all'
log_duration = on

# Performance
shared_buffers = 128MB
effective_cache_size = 512MB
maintenance_work_mem = 64MB
work_mem = 4MB

