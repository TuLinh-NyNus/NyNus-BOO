# Docker Compose Environment Variables
# Copy this file to .env and update values for your environment

# ===== ENVIRONMENT =====
APP_ENV=development

# ===== CONTAINER NAMES =====
POSTGRES_CONTAINER_NAME=exam_bank_postgres
BACKEND_CONTAINER_NAME=exam_bank_backend
FRONTEND_CONTAINER_NAME=exam_bank_frontend

# ===== POSTGRES DATABASE =====
POSTGRES_DB=exam_bank_db
POSTGRES_USER=exam_bank_user
POSTGRES_PASSWORD=exam_bank_password
POSTGRES_VOLUME=postgres_data
DB_PORT=5432

# ===== BACKEND SERVICE =====
BACKEND_DOCKERFILE=docker/backend.Dockerfile
BACKEND_GRPC_PORT=50051
BACKEND_HTTP_PORT=8080
HTTP_GATEWAY_ENABLED=true

# ===== FRONTEND SERVICE =====
FRONTEND_DOCKERFILE=docker/frontend.Dockerfile
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_GRPC_URL=http://localhost:8080
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===== REDIS (Development only) =====
REDIS_PORT=6379
REDIS_PASSWORD=exam_bank_redis_password

# ===== OPENSEARCH (Development only) =====
OPENSEARCH_PORT=9200
OPENSEARCH_DASHBOARDS_PORT=5601

# ===== ADMINER (Development only) =====
ADMINER_PORT=8082

# ===== PRODUCTION OVERRIDES =====
# Uncomment and set these for production deployment
# DB_PASSWORD=<strong-production-password>
# JWT_SECRET=<strong-production-secret>
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_GRPC_URL=https://api.yourdomain.com
# NEXTAUTH_URL=https://yourdomain.com
# NEXTAUTH_SECRET=<strong-production-nextauth-secret>

